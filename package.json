{
  "name": "webdav-pc-server",
  "version": "22.1.2",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node main.js",
    "start:bg": "start /b node main.js",
    "start:min": "start /min node main.js",
    "restart": "taskkill /IM node.exe /F & timeout /t 2 /nobreak >nul & node main.js",
    "stopall": "taskkill /IM node.exe /F",
    "stop": "for /f \"tokens=5\" %i in ('netstat -ano ^| findstr :1900') do taskkill /PID %i /F",
    "stop:all": "taskkill /IM node.exe /F & timeout /t 2 /nobreak >nul & for /f \"tokens=5\" %i in ('netstat -ano ^| findstr :1900') do taskkill /PID %i /F",
    "status": "netstat -ano | findstr :1900",
    "monitor": "powershell -Command \"Get-Process node | Select-Object Id,ProcessName,CPU,WorkingSet | Format-Table\"",
    "config:check": "type config.txt",
    "config:edit": "notepad config.txt",
    "logs": "powershell -Command \"Get-Content -Path '*.log' -Tail 50 -Wait\"",
    "test:performance": "curl -w '@curl-format.txt' -o /dev/null -s http://localhost:1900/test-image.jpg",
    "parallel:test": "powershell -Command \"1..10 | ForEach-Object { Start-Job { curl http://localhost:1900/test-image.jpg } } | Wait-Job | Receive-Job | Remove-Job\"",
    "config:parallel": "powershell -Command \"Get-Content config.txt | Select-String 'MAX_CONCURRENCY|SHARP_MEMORY_LIMIT|SHARP_PIXEL_LIMIT'\"",
    "health:check": "curl -s http://localhost:1900/ | findstr \"WebDAV\""
  },
  "keywords": ["webdav", "image", "conversion", "sharp", "imagemagick", "parallel", "performance", "optimization"],
  "author": "",
  "license": "ISC",
  "description": "高性能WebDAV画像変換サーバー - 並列処理最適化、適応的スタック処理、動的設定管理",
  "dependencies": {
    "express": "^5.1.0",
    "heic-convert": "^2.1.0",
    "iconv-lite": "^0.7.0",
    "lru-cache": "^10.4.3",
    "p-limit": "^2.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "sharp": "^0.34.1",
    "webdav-server": "^2.6.2"
  }
}
